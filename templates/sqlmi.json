{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet",
      "metadata": {
        "description": "Enter virtual network name. If you leave this field blank name will be created by the template."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Enter location. If you leave this field blank resource group location would be used."
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "SSMIsubnet",
      "metadata": {
        "description": "Enter subnet name."
      }
    },
    "subnetId": {
      "type": "string",
      "defaultValue": "SSMIsubnet",
      "metadata": {
        "description": "Enter subnet name."
      }
    },
    "SSMINAME": {
      "type": "string",
      "maxLength": 13,
      "metadata": {
        "description": "Enter managed instance name."
      }
    },
    "SSMISkuName": {
      "type": "string",
      "allowedValues": ["GP_Gen4", "GP_Gen5", "BC_Gen4", "BC_Gen5"],
      "defaultValue": "GP_Gen4",
      "metadata": {
        "description": "Enter sku name."
      }
    },
    "SSMIVCores": {
      "type": "int",
      "defaultValue": 16,
      "allowedValues": [8, 16, 24, 32, 40, 64, 80],
      "metadata": {
        "description": "Enter number of SSMIVCores."
      }
    },
    "licenseType": {
      "type": "string",
      "defaultValue": "LicenseIncluded",
      "allowedValues": ["BasePrice", "LicenseIncluded"],
      "metadata": {
        "description": "Enter license type."
      }
    },
    "storageSizeInGB": {
      "type": "int",
      "defaultValue": 256,
      "minValue": 32,
      "maxValue": 8192,
      "metadata": {
        "description": "Enter storage size."
      }
    },
    "administratorLogin": {
      "type": "string",
      "metadata": {
        "description": "Enter user name."
      }
    },
    "administratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Enter password."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Sql/managedInstances",
      "apiVersion": "2015-05-01-preview",
      "identity": {
        "type": "SystemAssigned"
      },
      "location": "[parameters('location')]",
      "name": "[parameters('SSMINAME')]",
      "sku": {
        "name": "[parameters('SSMISkuName')]"
      },
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "subnetId": "[parameters('subnetId')]",
        "storageSizeInGB": "[parameters('storageSizeInGB')]",
        "SSMIVCores": "[parameters('SSMIVCores')]",
        "licenseType": "[parameters('licenseType')]"
      }
    }
  ],
  "outputs": {}
}
